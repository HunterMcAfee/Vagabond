<!DOCTYPE html>
<html>
  <head>
    <title>Vagabond</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%#= Navbar bootstrap, includes logo and site name %>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
      <div class="site-wrapper">
        <%= image_tag("airplane.svg", :alt => "plane", :class => "logo") %>
        <%= link_to "Vagabond", root_path, class: "site-title" %>
        </div>
      </div>
    </div>
    </nav>

    <%#= View logic for displaying the alert coming from edit and create routes %>
    <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
    <% end %>

    <%#= Displays rails views %>
    <%= yield %>
    
  </body>
</html>
