<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">  
    <div class="panel panel-default text-center">
        <div class="panel-heading"><h2><%= @city.name %></h2></div>
        <div class="panel-body">
            <%= image_tag(@city.photo, :class => "city-image", :alt => "Card image cap") %>
        </div>
        <div class="panel-body">
        <%= link_to "Make a Post", new_city_post_path(@city.id), class: "btn btn-success" %>
        </div>
    </div>
    </div>
    </div>

    <% @posts.reverse_each do |post| %>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-primary">
            <div class="panel-heading"><%= post.title %></div>
            <div class="panel-body">
                <%= post.content %>  
                </div>
                <div class="panel-body">
                <%= link_to 'View', city_post_path(@city.id, post.id), class: "btn btn-info" %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>
