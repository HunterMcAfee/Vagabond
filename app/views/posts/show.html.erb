<div class="container">
<div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-primary">
            <div class="panel-heading"><%= @post.title %></div>
            <div class="panel-body">
                <%= @post.content %>  
                </div>
                <div class="panel-body">
                    <div class="button-wrapper">
                        <%= link_to 'Edit', edit_city_post_path(@city, @post), class: "btn btn-warning" %>
                        
                        <%= form_for [@city, @post], method: :delete do |f|%>
                            <%= f.submit "Delete", data: { confirm: 'Are you sure you want to delete post?' }, class: "btn btn-danger" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="row text-center">
<%= link_to 'Back', city_path(@city), class: "btn btn-primary btn-lg" %>
</div>
</div>